<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Centro de Recursos Educativos</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
  <div class="container mt-4">
    <h1 class="text-center">ðŸ“š Centro de Recursos Educativos</h1>

    <form action="/agregar" method="POST" class="row g-3 mt-4">
      <div class="col-md-4">
        <input class="form-control" name="titulo" placeholder="TÃ­tulo" required />
      </div>
      <div class="col-md-4">
        <input class="form-control" name="descripcion" placeholder="DescripciÃ³n" required />
      </div>
      <div class="col-md-2">
        <select class="form-select" name="tipo" required>
          <option>Video</option>
          <option>Documento</option>
          <option>Podcast</option>
        </select>
      </div>
      <div class="col-md-2">
        <input class="form-control" name="url" placeholder="URL" required />
      </div>
      <div class="col-12 text-end">
        <button class="btn btn-primary">Agregar Recurso</button>
      </div>
    </form>

    <hr class="my-4" />

    <div class="row">
      <% recursos.forEach(r => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= r.titulo %></h5>
              <p class="card-text"><%= r.descripcion %></p>
              <p class="text-muted"><%= r.tipo %></p>
              <a href="<%= r.url %>" target="_blank" class="btn btn-outline-secondary">Ver recurso</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
